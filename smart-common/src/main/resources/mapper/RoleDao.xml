<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.goroute.smart.common.dao.RoleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.goroute.smart.common.entity.RoleEntity" id="roleMap">
        <result property="uid" column="uid"/>
        <result property="roleName" column="role_name"/>
        <result property="description" column="description"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>
    <select id="getRoleNameByMemberUid" resultType="java.lang.String">
        SELECT r.role_name
        FROM t_user_role ur,
             t_role r
        WHERE r.uid = ur.role_uid AND ur.user_uid = #{memberUid}
    </select>


</mapper>